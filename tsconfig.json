{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./lib",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
